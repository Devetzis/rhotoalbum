# RSS
generateRss: true

# Google analytics
#google_analytics: <YOUR TRACKER CODE> or nil

# labels translation
labelNoPhoto: 'no photos'
labelOnePhoto: 'one photo'
labelMorePhotos: '# photos'
labelOneAlbum: 'one album'
labelMoreAlbums: '# albums'

# generator
nonrecursive: false

# development and debug
explicitIndexHtml: false # true for testing the result without a web server
debug: false
