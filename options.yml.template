# main
title: Rhotoalbum
author: Ondrej Jaura, Viktor Zigo
author_label: Authors

# stylesheet
css: rhotoalbum.css # rhotoalbum.css, rhotoalbum_w.css
styleSwitcher: true # true to enable but not usable with all effects

# labels visibility
showTitleAlbum: true
showStatsAlbum: true
showTitlePhoto: true
showDescription: true
descriptionAsName: false
showDate: true

# EXIF data visibility
useExifDate: true
showExif: true
showExtendedExif: false

# full screen (TripTracker) settings
panning: false
fading: false

# thumbnails
thumbnailDim: 256x256
maxPerPage: -1 # -1 for no paging

# thumbnails effects
effect: polaroid # reflection, shadow, polaroid, glow, rotate
effectAlbum: polaroid_stack # stack, polaroid_stack
effectBackground: '#000000' # '#000000' for rhotoalbum.css, '#FFFFFF' for rhotoalbum_w.css

